<!DOCTYPE html>
<html lang="en">
<head>   
</head>
<body>
<div class="page-wrapper chiller-theme toggled">
  <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
    <i class="fas fa-bars"></i>
  </a>
  <nav id="sidebar" class="sidebar-wrapper" style="background-color:steelblue;color:#fff;">
    <div class="sidebar-content">
      <div class="sidebar-brand">
        <a href="#" style="color:#fff;">Sales Dashboard</a>
      </div>
      <div class="sidebar-header">
        <div class="user-info">
          <span class="user-name" style="color:#fff;">
            <%= current_user.email %>
          </span>
          <span class="user-role" style="color:#fff;"><%= current_user.user_role %>Admin</span>
        </div>
      </div>
      <!-- sidebar-header  -->
      <div class="sidebar-search">
        <div>
          <div class="input-group">
            <input type="text" class="form-control search-menu" placeholder="Search...">
            <div class="input-group-append">
              <span class="input-group-text">
                <button value="search" type="submit"><i class="fa fa-search" aria-hidden="true" style="color:#F7941D;"></i></button>
              </span>
            </div>
          </div>
        </div>
      </div>
      <!-- sidebar-search  -->
      <div class="sidebar-menu">
        <ul>
          <li class="header-menu">
            <span style="color:#fff;">Extra</span>
          </li>
          <li>
              <%= link_to 'Add Product', new_product_path, style:"color:#fff;" %>
          </li>
          
           <li>
             <%= link_to 'Add Vendor', new_vendor_path, style:"color:#fff;" %>
          </li>
          
          <li>
              <%= link_to 'All Product', products_path, style:"color:#fff;" %>
          </li>
          <li>
            <%= link_to 'Manage Vendors', vendors_path, style:"color:#fff;" %>
          </li>
          <li>
            <%= link_to 'Orders', orders_path, style:"color:#fff;" %>
          </li>
          <li>
            <%= link_to 'Categories', categories_path, style:"color:#fff;" %>
          </li>
          <li>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, style:"color:#fff;" %>
          </li>
        </ul>
      </div>
      <!-- sidebar-menu  -->
    </div>
    <!-- sidebar-content  -->
  </nav>
  <!-- sidebar-wrapper  -->
  <main class="page-content">
    <div class="container">
        <p style="text-align:center;">New Category</p>
      <div class="row">
        <h3 style="text-align:center;">New Category</h3>
      <%= form_with(model: category, local: true) do |form| %>
        <% if category.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

            <ul>
            <% category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class:"form-control", placeholder:"Enter Name Category" %>
        </div>
        <%= form.submit class:"btn btn-primary" %>
      <% end %>
      </div>
    </div>
  </main>
  <!-- page-content" -->
</div>
<!-- page-wrapper -->   
</body>
</html><br><br>