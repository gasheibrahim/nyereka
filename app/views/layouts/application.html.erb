						<div class="top-left">
							<ul class="list-main">
								<li style="color:steelblue;"><i class="fa fa-whatsapp" aria-hidden="true"></i>
                  <%= link_to "https://api.whatsapp.com/send?phone=250788720876" do %>
                    <strong>Chat On Whatsapp</strong>
                  <% end %>
                </li>
								<li><i class="fas fa-envelope"></i>
                  <%= mail_to "sales@nyerekatech.com" do %>
                    <strong>Email Us</strong>
                  <% end %>
                </li>
							</ul>
						</div>
						<!--/ End Top Left -->
					</div>
					<div class="col-lg-8 col-md-12 col-12">
						<!-- Top Right -->
						<div class="right-content">
							<ul class="list-main">
								<% if user_signed_in? %>
									Welcome: <strong><%= current_user.fullname %></strong>.
									<li><i class="fas fa-users"></i><%= link_to 'Edit profile', edit_user_registration_path, style:"color:steelblue" %></li>
									<li><i class="fas fa-sign-out-alt"></i><%= link_to "Logout", destroy_user_session_path, method: :delete, style:"color:steelblue" %></li>
								<% else %>
									<li><i class="fa fa-user-plus" aria-hidden="true"></i>
                  <%= link_to "Join Us", new_user_registration_path, style:"color:steelblue" %></li>
									<li><i class="fa fa-users" aria-hidden="true"></i>
                  <%= link_to "Login", new_user_session_path, style:"color:steelblue" %></li>
								<% end %>
								<% if user_signed_in? && current_user.user_role== 'admin'%>
									<li><i class="fas fa-user-alt"></i><%= link_to "Admin Panel",  rails_admin.dashboard_path, method:"get" %></li>
								<% end %>
								<% if user_signed_in? && current_user.user_role== 'sales'%>
									<li><i class="fas fa-user-alt"></i><%= link_to "Sales Panel", products_path %></li>
								<% end %>
								<% if total_cart_items %>
                  <%= link_to cart_path(@cart), class:"navbar-item button is-warning" do %>
                  <span class="icon is-small">
                    <i class="fa fa-shopping-cart"></i>
                  </span>
                  <span>Cart
                    <%= cart_count_over_one %>
                    </span>
                  <% end %>
                <% end %>
								
							</ul>
						</div>
						<!-- End Top Right -->
					</div>
				</div>
			</div>
		</div>
		<!-- End Topbar -->
    </header>
    <% if notice %>
